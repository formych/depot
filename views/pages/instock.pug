extends ../layout

block content
	.container
		.row
			form.form-horizontal(method="post", action="/instock")
				input(type="hidden", name="instock[_id]", value=instock._id)
				.form-group
					label.col-sm-2.control-label(for="inputGoods") 商品
					.col-sm-3
						select#inputGoods.form-control(name="instock[goods]")
							each item in goods							
								if instock.goods && item._id.toString()==instock.goods.toString()
									option(value=item._id, selected) #{item.name}
								else
									option(value=item._id) #{item.name}					
				.form-group
					label.col-sm-2.control-label(for="inputPrice") 进价
					.col-sm-3
						input#inputPrice.form-control(type="text", name="instock[price]", value=instock.price, placeholder="元(必须是数字)")
					label.col-sm-1.control-label(for="inputAmount") 总量
					.col-sm-3
						input#inputTotal.form-control(type="text", name="instock[amount]", value=instock.amount, placeholder="个数(必须是数字)")
				.form-group
					label.col-sm-2.control-label(for="inputTotalPrice") 总价
					.col-sm-3
						input#inputTotalPrice.form-control(type="text", name="instock[totalPrice]", value=instock.totalPrice, placeholder="元(必须是数字)")
					label.col-sm-1.control-label(for="inputUnit") 单位
					.col-sm-3
						input#inputUnit.form-control(type="text", name="instock[unit]", value=instock.unit)
				.form-group
					label.col-sm-2.control-label(for="inputSupplier") 供应商
					.col-sm-3
						input#inputSupplier.form-control(type="text", name="instock[supplier]", value=instock.supplier)
					label.col-sm-1.control-label(for="inputTelphone") 电话
					.col-sm-3
						input#inputTelphone.form-control(type="tel", name="instock[tel]", value=instock.tel, placeholder="电话号码(必须是数字)")
				.form-group
					label.col-sm-2.control-label(for="inputProduceAt") 产地
					.col-sm-3
						input#inputProduceAt.form-control(type="text", name="instock[produceAt]", value=instock.produceAt)
					label.col-sm-1.control-label(for="inputProduceTime") 出厂日期
					.col-sm-3
						input#inputProduceTime.form-control(type="date", name="instock[produceTime]", value=instock.produceTime)
				.form-group
					label.col-sm-2.control-label(for="inputBuyer") 进货人
					.col-sm-3
						input#inputBuyer.form-control(type="text", name="instock[buyer]", value=instock.buyer)
					label.col-sm-1.control-label(for="inputBuyTime") 进货日期
					.col-sm-3
						input#inputBuyTime.form-control(type="date", name="instock[buyTime]", value=instock.buyTime)
				.form-group
					label.col-sm-2.control-label(for="inputNote") 备注
					.col-sm-3
						textarea#inputNote.form-control(type="text", name="instock[note]" value=instock.note) #{instock.note}
				.form-group
					.col-sm-offset-2.col-sm-3
					button.btn.btn-default(type="submit") 录入
	script(src="/js/admin.js")