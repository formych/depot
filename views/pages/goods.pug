extends ../layout

block content
	.container
		.row
			form.form-horizontal(method="post", action="/goods")
				input(type="hidden", name="goods[_id]", value=goods._id)
				.form-group
					label.col-sm-2.control-label(for="inputCategory") 分类
					.col-sm-2
						select.form-control(name="goods[category]")
							each item in categories								
								if goods.category && item._id.toString()==goods.category.toString()
									option(value=item._id, selected) #{item.name}
								else
									option(value=item._id) #{item.name}
				.form-group
					label.col-sm-2.control-label(for="inputName") 名称
					.col-sm-3
						input#inputName.form-control(type="text", name="goods[name]", value=goods.name)
				.form-group
					label.col-sm-2.control-label(for="inputSold") 售出
					.col-sm-3
						input#inputSold.form-control(type="number", name="goods[sold]", value=goods.sold, placeholder="卖出个数(必须是数字)")
					label.col-sm-1.control-label(for="inputRest") 剩余
					.col-sm-3
						input#inputRest.form-control(type="number", name="goods[rest]", value=goods.rest, placeholder="剩余个数(必须是数字)")
				.form-group
					label.col-sm-2.control-label(for="inputTotal") 总量
					.col-sm-3
						input#inputTotal.form-control(type="number", name="goods[total]", value=goods.total, placeholder="卖出 + 剩余个数(必须是数字)")
					label.col-sm-1.control-label(for="inputStatus") 状态
					.col-sm-3
						input#inputStatus.form-control(type="text", name="goods[status]", value=goods.status)

				.form-group
					label.col-sm-2.control-label(for="inputNote") 备注
					.col-sm-3
						textarea#inputNote.form-control(type="text", name="goods[note]", value=goods.note) #{goods.note}
				.form-group
					.col-sm-offset-2.col-sm-3
					button.btn.btn-default(type="submit") 录入
	script(src="/js/admin.js")